{
  "name": "logux.io",
  "private": true,
  "scripts": {
    "start": "parcel serve src/uikit.pug --open",
    "lint": "eslint . && stylelint src/**/*.sss",
    "test": "yarn lint && yarn build && size-limit",
    "clean": "del-cli dist/ .cache",
    "build": "NODE_ENV=production ./scripts/build.js"
  },
  "dependencies": {
    "@rollup/plugin-replace": "^2.3.0",
    "capitalize": "^2.0.1",
    "chalk": "^3.0.0",
    "del": "^5.1.0",
    "documentation": "^12.1.4",
    "globby": "^10.0.1",
    "jstransformer-lowlight": "^0.1.0",
    "lowlight": "^1.13.0",
    "make-dir": "^3.0.0",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.26",
    "postcss-combine-media-query": "^1.0.0",
    "postcss-hexrgba": "^2.0.0",
    "postcss-media-minmax": "^4.0.0",
    "postcss-mixins": "^6.2.3",
    "postcss-momentum-scrolling": "^2.2.9",
    "postcss-nested": "^4.2.1",
    "postcss-url": "^8.0.0",
    "pug": "^2.0.4",
    "recursive-copy": "^2.0.10",
    "rehype-parse": "^6.0.2",
    "rehype-raw": "^4.0.1",
    "rehype-stringify": "^6.0.1",
    "remark": "^11.0.2",
    "remark-highlight.js": "^5.2.0",
    "remark-html": "^10.0.0",
    "remark-parse": "^7.0.2",
    "remark-rehype": "^5.0.0",
    "rollup": "^1.27.14",
    "rollup-plugin-inject-process-env": "^1.1.0",
    "rollup-plugin-terser": "^5.1.3",
    "slugify": "^1.3.6",
    "spinnies": "^0.5.1",
    "ssdeploy": "^0.4.2",
    "sugarss": "^2.0.0",
    "unified": "^8.4.2",
    "unist-util-filter": "^2.0.1",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^2.0.1",
    "unzipper": "^0.10.5"
  },
  "devDependencies": {
    "@logux/eslint-config": "^35.0.3",
    "@logux/sharec-config": "^0.5.6",
    "@logux/stylelint-config": "^0.1.1",
    "@size-limit/file": "^2.2.4",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.2.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^15.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "stylelint": "^12.0.1",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-order": "^4.0.0",
    "svgo": "^1.3.2"
  },
  "repository": "logux/logux.io",
  "homepage": "https://logux.io/",
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "type": "module",
  "engines": {
    "node": ">=13.2.0"
  },
  "postcss": {
    "plugins": {
      "postcss-mixins": {
        "mixinsDir": "mixins"
      },
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-momentum-scrolling": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/node",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off"
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": "src/service.js",
        "globals": {
          "FILES": false
        }
      }
    ]
  },
  "eslintIgnore": [
    "scripts/lib/dirs.js",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint",
    "*.svg": [
      "svgo",
      "git add"
    ],
    "*.sss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": [
        "dist/uikit/index.html",
        "dist/*.woff",
        "dist/*.svg",
        "dist/*.js",
        "dist/*.css",
        "!dist/service.js",
        "!dist/open.*.svg",
        "!dist/close.*.svg",
        "!dist/chat.*.svg",
        "!dist/pinned.*.svg",
        "!dist/favicon.*.svg",
        "!dist/chain-dark.*.svg",
        "!dist/lurkers-dark.*.svg",
        "!dist/logotype-dark.*.svg"
      ],
      "limit": "17 KB"
    }
  ],
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.5.6"
  }
}

{
  "name": "logux.io",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "parcel serve src/uikit.pug --open",
    "lint": "eslint . && stylelint src/**/*.sss",
    "test": "yarn lint && yarn build && size-limit",
    "clean": "del-cli dist/ .cache/",
    "build": "NODE_ENV=production ./scripts/build.js",
    "start:build": "serve dist/"
  },
  "dependencies": {
    "@babel/core": "^7.13.16",
    "@rollup/plugin-replace": "^2.4.2",
    "autoprefixer": "^9.8.6",
    "capitalize": "^2.0.3",
    "colorette": "^1.2.2",
    "del": "^6.0.0",
    "dotenv": "^8.2.0",
    "globby": "^11.0.3",
    "jstransformer-lowlight": "^0.1.0",
    "lowlight": "^1.20.0",
    "make-dir": "^3.1.0",
    "nanoevents": "^5.1.13",
    "parcel-bundler": "^1.12.5",
    "postcss": "^7.0.32",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^4.0.0",
    "postcss-mixins": "^6.2.3",
    "postcss-momentum-scrolling": "^2.8.20",
    "postcss-nested": "^4.2.3",
    "postcss-url": "^8.0.0",
    "pug": "^3.0.2",
    "recursive-copy": "^2.0.11",
    "rehype-parse": "^7.0.1",
    "rehype-raw": "^5.1.0",
    "rehype-stringify": "^8.0.0",
    "remark": "^13.0.0",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^13.0.1",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.1.0",
    "rollup": "^2.45.2",
    "rollup-plugin-inject-process-env": "^1.3.1",
    "rollup-plugin-terser": "^7.0.2",
    "slugify": "^1.5.0",
    "spinnies": "^0.5.1",
    "ssdeploy": "^0.6.19",
    "sugarss": "^2.0.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4",
    "unified": "^9.2.1",
    "unist-util-filter": "^3.0.0",
    "unist-util-flatmap": "^1.0.0",
    "unist-util-visit": "^3.0.0",
    "unzipper": "^0.10.11"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.4.1",
    "@logux/sharec-config": "^0.10.1",
    "@logux/stylelint-config": "^0.3.1",
    "@size-limit/file": "^4.10.2",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^31.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "serve": "^11.3.2",
    "simple-git-hooks": "^2.4.1",
    "size-limit": "^4.10.2",
    "stylelint": "^13.13.0",
    "svgo": "^2.3.0"
  },
  "repository": "logux/logux.io",
  "homepage": "https://logux.io/",
  "license": "MIT",
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-mixins": {
        "mixinsDir": "mixins"
      },
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-momentum-scrolling": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off",
      "no-loop-func": "off"
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "overrides": [
      {
        "files": "src/service.js",
        "globals": {
          "FILES": false
        }
      },
      {
        "files": "scripts/**/*.js",
        "rules": {
          "no-console": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "scripts/lib/dirs.js",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "path": [
        "dist/uikit/index.html",
        "dist/*.woff",
        "dist/*.svg",
        "dist/*.js",
        "dist/*.css",
        "!dist/service.js",
        "!dist/open.*.svg",
        "!dist/close.*.svg",
        "!dist/chat.*.svg",
        "!dist/pinned.*.svg",
        "!dist/favicon.*.svg",
        "!dist/chain-dark.*.svg",
        "!dist/lurkers-dark.*.svg",
        "!dist/logotype-dark.*.svg"
      ],
      "limit": "16 KB"
    }
  ],
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.10.1"
  }
}
